{
  "name": "rx-vision-root",
  "private": true,
  "workspaces": [
    "demo-app",
    "chrome-devtools",
    "frontend",
    "api"
  ],
  "scripts": {
    "build:extension": "npm -w frontend install && npm -w frontend run build && npm -w chrome-devtools run build",
    "build:api": "npm -w api run build",
    "publish:api": "npm publish -w api --access public",
    "start:demo-app": "npm -w demo-app start",
    "start:dev": "npm run start:frontend",
    "start:frontend": "npm -w frontend start"
  }
}
